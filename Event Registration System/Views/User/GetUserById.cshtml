@model Event_Registration_System.Models.User
@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <p>
        <a href="@Url.Action("GetUsers", "User")" class="btn btn-secondary">Back to List</a>
        <a asp-action="EditUser" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="DeleteUser" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </p>
</div>