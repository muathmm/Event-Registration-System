@model IEnumerable<Event_Registration_System.Models.User>
@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="GetUserById" asp-route-id="@user.Id" class="btn btn-info">View</a>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>