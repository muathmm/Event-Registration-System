@model Event_Registration_System.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <h4>Are you sure you want to delete this user?</h4>
    <form asp-action="DeleteUserConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action("GetUsers", "User")" class="btn btn-secondary">Cancel</a>
    </form>
</div>