@model Event_Registration_System.Models.Event

@section Styles {
    <link rel="stylesheet" href="~/css/Events/Details.css" />
}
@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <h2>@Model.Title</h2>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
</div>

<a asp-action="EditEvent" asp-route-id="@Model.EventId" class="action-button">Edit</a> |
<a asp-action="DeleteEvent" asp-route-id="@Model.EventId" class="action-button">Delete</a> |
<a asp-action="GetEvents" class="action-button">Back to Events</a>