@model Event_Registration_System.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<div>
    <h2>Are you sure you want to delete this event?</h2>
    <h3>@Model.Title</h3>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
</div>

<form asp-action="DeleteEventConfirmed" method="post">
    <input type="hidden" asp-for="EventId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="GetEvents">Cancel</a>